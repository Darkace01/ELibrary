@model RegisterViewModel
@{
    ViewData["Title"] = "Admin Register";
    Layout = "_AuthLayout";
}

<div class="auth-box-w">
    <div class="logo-w">
        <a asp-controller="Home" asp-action="Index" asp-area=""><div class="pre-icon os-icon os-icon-user-male-circle"></div></a>
    </div>
    <h4 class="auth-header">
        Login Form
    </h4>
    <form method="post" asp-action="RegisterPost"  asp-controller="Account"asp-area="Admin">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Email">Email</label><input class="form-control" asp-for="Email" placeholder="Enter your email" type="text">
            <div class="pre-icon os-icon os-icon-user-male-circle"></div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FullName">Full Name</label><input class="form-control" asp-for="FullName" placeholder="Enter your full name" type="text">
            <div class="pre-icon os-icon os-icon-user-male-circle"></div>
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="Password">Password</label><input class="form-control" asp-for="Password" placeholder="Enter your password" type="password">
                    <div class="pre-icon os-icon os-icon-fingerprint"></div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="ConfirmPassword">Confirm Password</label><input class="form-control" asp-for="ConfirmPassword" placeholder="Re-Enter your password" type="password">
                    @*<div class="pre-icon os-icon os-icon-fingerprint"></div>*@
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="buttons-w">
            <button class="btn btn-primary" type="submit">Register</button>
          </div>
    </form>
</div>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
