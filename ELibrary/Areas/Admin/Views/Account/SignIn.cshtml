@model LoginViewModel
@{
    ViewData["Title"] = "Log in";
    Layout = "_AuthLayout";
}

<div class="auth-box-w">
    <div class="logo-w">
        <a asp-controller="Home" asp-action="Index" asp-area=""><div class="pre-icon os-icon os-icon-user-male-circle"></div></a>
    </div>
    <h4 class="auth-header">
        Login Form
    </h4>
    <form method="post" asp-action="SignInPost"  asp-controller="Account"asp-area="Admin">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Username">Username</label><input class="form-control" asp-for="Username" placeholder="Enter your username" type="text">
            <div class="pre-icon os-icon os-icon-user-male-circle"></div>
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label><input class="form-control" asp-for="Password" placeholder="Enter your password" type="password">
            <div class="pre-icon os-icon os-icon-fingerprint"></div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="buttons-w">
            <button class="btn btn-primary" type="submit">Log me in</button>
            <div class="form-check-inline">
                <label class="form-check-label" asp-for="RememberMe"><input asp-for="RememberMe" class="form-check-input" type="checkbox">Remember Me</label>
            </div>
        </div>
    </form>
</div>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
